<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigation">
        <item name="android:background">@color/white</item>
        <item name="itemBackground">?attr/bottomNavigationViewBackground</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
    </style>

    <style name="SearchCoverImage">
        <item name="android:src">@drawable/search_cover_lm</item>
    </style>

    <style name="ErrorNetworkImage">
        <item name="android:src">@drawable/error_connection_lm</item>
    </style>

    <style name="ErrorVacancyImage">
        <item name="android:src">@drawable/error_vacancy_lm</item>
    </style>

    <attr name="bottomNavigationViewBackground" format="color" />


    <style name="FilterBackImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">@dimen/button_back_height</item>
        <item name="android:layout_height">@dimen/button_back_height</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="tint">?android:attr/textColorPrimary</item>
        <item name="android:src">@drawable/ic_filter_arrow_back</item>
    </style>

    <style name="FilterTopBarTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="FilterMenuItem" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:textColorHint">@color/filter_menu_label_selector</item>
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_filter_arrow_forward</item>
        <item name="endIconContentDescription">\></item>
        <item name="endIconTint">?android:attr/textColorPrimary</item>
        <item name="android:editable">false</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="boxStrokeErrorColor">?attr/colorPrimary</item>
        <item name="boxBackgroundColor">?attr/colorPrimary</item>

    </style>

    <style name="FilterMenuItemHintTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="FilterMenuItemEditTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="ThemeFilterMenuItemSalaryOverlay.AppTheme.TextInputEditText.FilledBox" parent="">
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="FilterMenuItemSalary" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="hintTextColor">?android:attr/textColorPrimary</item>
        <item name="android:textColor">@color/black</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_filter_clear</item>
        <item name="endIconContentDescription">\></item>
        <item name="endIconTint">?android:attr/textColorPrimary</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="FilterMenuItemSalaryHintTextAppearance">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="FilterButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="FilterBlueButtonStyle" parent="FilterButtonStyle">
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TeamTopBarHeaderStyle">
        <item name="android:minHeight">@dimen/tool_bar_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="TeamTitleStyle">
        <item name="android:minHeight">@dimen/tool_bar_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingHorizontal">@dimen/margin_16</item>
        <item name="android:layout_marginVertical">@dimen/margin_24</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="TeamDeveloperStyle">
        <item name="android:paddingHorizontal">@dimen/margin_16</item>
        <item name="android:layout_marginBottom">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="FilterLocationItemTextViewStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/location_item_min_height</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
        <item name="drawableRightCompat">@drawable/ic_filter_arrow_forward</item>
        <item name="android:drawableTint">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>

    <style name="FilterRegionEditTextSyle">
        <item name="android:minHeight">@dimen/filter_edittext_min_height</item>
        <item name="android:layout_marginStart">@dimen/margin_16</item>
        <item name="android:layout_marginEnd">@dimen/margin_16</item>
        <item name="android:layout_marginTop">@dimen/margin_8</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">text</item>
        <item name="android:background">@drawable/bg_filter_edittext</item>

        <item name="android:imeOptions">actionDone</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
        <item name="android:textColorHint">?attr/colorOnSecondary</item>
        <item name="android:drawableEnd">@drawable/icon_search</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="android:importantForAutofill">no</item>
    </style>

    <style name="FilterPlaceHolderTextViewStyle">
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/margin_16</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="FilterIndustryItemRadioButtonStyle">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/industry_item_min_height</item>
        <item name="android:paddingStart">@dimen/margin_16</item>
        <item name="android:paddingEnd">@dimen/margin_16</item>
        <item name="android:paddingTop">@dimen/margin_8</item>
        <item name="android:paddingBottom">@dimen/margin_8</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">@dimen/margin_8</item>
        <item name="android:drawableEnd">?android:attr/listChoiceIndicatorSingle</item>
        <item name="drawableTint">@color/blue</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/regular_text_size</item>
    </style>
</resources>